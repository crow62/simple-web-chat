<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>ExistingUsersServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.ExistingUsersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExistingUsersServlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthorizationServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.AuthorizationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AuthorizationServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HandlerMessageServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.HandlerMessageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HandlerMessageServlet</servlet-name>
    <url-pattern>/msg</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdaterMessageServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.UpdaterMessageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdaterMessageServlet</servlet-name>
    <url-pattern>/field</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>ExitServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.ExitServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExitServlet</servlet-name>
    <url-pattern>/exit</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ru.meleshin.filters.EncodingFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>ToMainPageServletFilter</filter-name>
    <filter-class>ru.meleshin.filters.ToMainPageServletFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>ToMainPageServletFilter</filter-name>
    <url-pattern>/chat.jsp</url-pattern>
  </filter-mapping>


  <filter>
    <filter-name>SessionUserFilter</filter-name>
    <filter-class>ru.meleshin.filters.SessionUserFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionUserFilter</filter-name>
    <url-pattern>/</url-pattern>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>RegisteredUsersFilter</filter-name>
    <filter-class>ru.meleshin.filters.RegisteredUsersFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>RegisteredUsersFilter</filter-name>
    <servlet-name>AuthorizationServlet</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>ru.meleshin.listeners.CleanerUsers</listener-class>
  </listener>




  <display-name>Archetype Created Web Application</display-name>
</web-app>
