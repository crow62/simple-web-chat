<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>ChatServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.ChatServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ChatServlet</servlet-name>
    <url-pattern>/chat</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GreetingServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.GreetingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GreetingServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MessageServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.MessageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MessageServlet</servlet-name>
    <url-pattern>/msg</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FieldServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.FieldServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FieldServlet</servlet-name>
    <url-pattern>/field</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExitServlet</servlet-name>
    <servlet-class>ru.meleshin.servlets.ExitServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExitServlet</servlet-name>
    <url-pattern>/exit</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>FilterEncoding</filter-name>
    <filter-class>ru.meleshin.filters.FilterEncoding</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FilterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>FilterExistingUsers</filter-name>
    <filter-class>ru.meleshin.filters.FilterExistingUsers</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FilterExistingUsers</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>


  <filter>
    <filter-name>FilterUsers</filter-name>
    <filter-class>ru.meleshin.filters.FilterUsers</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FilterUsers</filter-name>
    <servlet-name>GreetingServlet</servlet-name>
  </filter-mapping>




  <display-name>Archetype Created Web Application</display-name>
</web-app>
